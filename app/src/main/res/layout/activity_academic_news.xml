<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#57CC99"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Section with Menu & Profile -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        tools:ignore="ExtraText">

        <ImageView
            android:id="@+id/menu_icon"
            android:src="@drawable/ic_menu"
            android:layout_height="50dp"
            android:layout_width="50dp" />
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="132dp"
            android:layout_height="250dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="-3dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/profile_picture" />
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_bg" />
    </RelativeLayout>

    <!-- Rounded Content Background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"

        android:padding="16dp"
        android:clipToOutline="true"
        android:backgroundTint="#BAF2D8"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_top_background">

        <!-- Top News -->
        <TextView
            android:text="Top News..."
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:src="@drawable/image06" />
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_image_bg"
        android:layout_marginBottom="8dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#157A6E"
            android:padding="8dp"
            android:text="More News..."
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/image04"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_image_bg" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:text="There are many variations of passages of Lorem Ipsum available... ... "
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="11h ago"
                    android:textColor="#777777"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/image05"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_image_bg" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:text="There are many variations of passages of Lorem Ipsum available... "
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="11h ago"
                    android:textColor="#777777"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">



                <TextView
                    android:text="11h ago"
                    android:textColor="#777777"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="#FFFFFF">


        <ImageView
            android:id="@+id/home"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/academic"
            android:src="@drawable/image07"
            android:layout_width="1dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:padding="10dp" />
    </LinearLayout>
</LinearLayout>
